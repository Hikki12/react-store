# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{tsx}]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all tsx under lib directory
[lib/**.tsx]
indent_style = space
indent_size = 2

# Matches the exact files either package.tsxon or .travis.yml
[{package.tsxon,.travis.yml}]
indent_style = space
indent_size = 2
